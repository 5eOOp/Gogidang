<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.mapper.MenuMapper">
	
	<select id="getMenues" resultType="MenuVO">
		SELECT * 
		FROM menu_reg 
		order by menu_num
	</select> 
	
	<select id="selectMenu" resultType="MenuVO" parameterType="MenuVO">
		SELECT * 
		FROM menu_reg
		where s_num=#{s_num}
	</select>
	
	<insert id="insertMenu" parameterType="MenuVO">
		INSERT  
		INTO menu_reg
		values(seq_menu_reg.nextval
			  ,#{u_id,jdbcType=VARCHAR}
			  ,#{s_num,jdbcType=INTEGER}
			  ,#{meat,jdbcType=INTEGER}
			  ,#{menu_name,jdbcType=VARCHAR}
			  ,#{price,jdbcType=VARCHAR}
			  ,#{img,jdbcType=VARCHAR}
			  ,#{grade,jdbcType=INTEGER}
			  ,#{gram,jdbcType=INTEGER}
				) 
	</insert>
	
	
</mapper>	